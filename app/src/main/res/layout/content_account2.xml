<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Account2Activity"
    tools:showIn="@layout/app_bar_account">


    <TextView
        android:id="@+id/txtDadosPessoais"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:width="1000dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/jumbo"
        android:text="Dados Pessoais" />

    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/txtlblNome"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:width="1000dp"
            android:text="Nome"
            android:textColor="@color/jumbo" />

        <EditText
            android:id="@+id/txtNomeAcount"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/jumbo" />

        <TextView
            android:id="@+id/txtlblEmail"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:width="1000dp"
            android:text="Email"
            android:textColor="@color/jumbo" />

        <EditText
            android:id="@+id/txtEmailAcount"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:textColor="@color/jumbo" />

    </RelativeLayout>

</RelativeLayout>


